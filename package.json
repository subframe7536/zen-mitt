{
  "name": "zen-mitt",
  "type": "module",
  "version": "3.0.0",
  "description": "light-weight(187B min+gzip) typesafe event mitter",
  "author": "subframe7536",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "event emitter"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./class": {
      "import": "./dist/class.js",
      "require": "./dist/class.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typesVersions": {
    "*": {
      "class": [
        "./dist/class.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && bun patch-dts.mjs",
    "release": "bun run test && bun run build && bumpp --all && npm publish",
    "test": "bun test"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@subframe7536/eslint-config": "^1.2.0",
    "@subframe7536/type-utils": "^0.1.6",
    "@types/node": "^20.17.19",
    "bumpp": "^10.0.3",
    "bun-types": "^1.2.2",
    "eslint": "^9.20.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
