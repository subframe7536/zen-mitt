  "devDependencies": {
    "@subframe7536/eslint-config": "^0.7.6",
    "@types/node": "^20.16.1",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
